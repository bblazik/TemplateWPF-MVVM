<Window x:Class="TemplateSolution.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TemplateSolution"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        d:DataContext="{d:DesignInstance local:TemplateViewModel, IsDesignTimeCreatable=False}">

    <StackPanel>
        <TextBlock Text="{Binding ExampleText}"/>
        <Button Content="Click!" Command="{Binding ExampleCommand}"/>
    </StackPanel>
</Window>
